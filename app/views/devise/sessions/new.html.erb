<div class="cover-container w-100 h-100 d-flex text-center flex-column justify-content-center align-items-center">
  <div class="mt-5">

    <h2>Ingresar</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label: "Correo electrónico" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    label: "Contraseña" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Ingresar", class: "btn btn-md btn-custom fw-bold mb-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
